#ifdef _WIN64
#define NAME "War1gus (64 bit)"
#else
#define NAME "War1gus"
#endif

#define DESCRIPTION NAME
#define VERSION "3.3.0"
#define VIVERSION 3,3,0
#define HOMEPAGE "https://github.com/wargus/war1gus"
#define LICENSE "GPL v2"
#define COPYRIGHT "(c) 1998-2022 by The Stratagus Project"

1 ICON "war1gus.ico"
1 VERSIONINFO
FILEVERSION	VIVERSION
PRODUCTVERSION	VIVERSION
FILEOS		4
FILETYPE	1

BEGIN
	BLOCK "StringFileInfo"
	BEGIN
		BLOCK "040904E4"
		BEGIN
			VALUE "FileDescription",        DESCRIPTION
			VALUE "FileVersion",            VERSION
			VALUE "InternalName",           NAME
			VALUE "LegalCopyright",         COPYRIGHT
			VALUE "License",                LICENSE
			VALUE "Homepage",               HOMEPAGE
			VALUE "OriginalFilename",       "war1gus.exe"
			VALUE "ProductName",            NAME
			VALUE "ProductVersion",         VERSION
		END
	END

	BLOCK "VarFileInfo"
	BEGIN
		VALUE "Translation", 0x409, 1252
	END
END
